.error-summary-item {
    flex-direction: row;
    align-items: center;
    padding: 4px;
    margin-bottom: 2px;
    cursor: link;
    border-radius: 2px;
}

.error-summary-item:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.error-summary-item-icon {
    width: 16px;
    height: 16px;
    margin-right: 6px;
    flex-shrink: 0;
}

.error-summary-item-text {
    font-size: 11px;
    color: rgb(230, 230, 230);
    flex-grow: 1;
    white-space: normal;
}